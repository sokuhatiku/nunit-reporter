{
  "name": "nunit-result",
  "version": "1.1.0",
  "private": true,
  "description": "Action to add nunit tests results ",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MirageNet/nunit-reporter.git"
  },
  "keywords": [
    "actions",
    "nunit",
    "test",
    "report"
  ],
  "author": "MirageNet",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.8.0",
    "@actions/github": "^2.2.0",
    "@actions/glob": "^0.1.2",
    "@octokit/rest": "^18.12.0",
    "@types/xml2js": "^0.4.11",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^12.20.50",
    "@typescript-eslint/parser": "^5.22.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^22.21.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "js-yaml": "^3.14.1",
    "lint-staged": "^12.4.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.4",
    "typescript": "^3.6.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
